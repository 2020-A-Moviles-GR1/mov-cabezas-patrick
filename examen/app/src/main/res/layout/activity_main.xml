<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="210dp"
        android:layout_height="50dp"
        android:layout_marginTop="45dp"
        android:text="Menú Principal"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_marcas"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="60dp"
        android:text="Menú Marcas"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/btn_modelos"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:text="Menú Modelos"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/btn_marcas"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btn_marcas"
        app:layout_constraintTop_toBottomOf="@+id/btn_marcas" />

    <Button
        android:id="@+id/btn_maps"
        android:layout_width="250dp"
        android:layout_height="120dp"
        android:layout_marginTop="20dp"
        android:text="Mapa"
        app:layout_constraintEnd_toEndOf="@+id/btn_modelos"
        app:layout_constraintStart_toStartOf="@+id/btn_modelos"
        app:layout_constraintTop_toBottomOf="@+id/btn_modelos" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/btn_maps"
        app:layout_constraintStart_toStartOf="@+id/btn_maps"
        app:layout_constraintTop_toBottomOf="@+id/btn_maps"
        tools:srcCompat="@tools:sample/avatars" />

</androidx.constraintlayout.widget.ConstraintLayout>